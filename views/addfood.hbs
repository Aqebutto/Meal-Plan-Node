<!DOCTYPE HTML>
<html>
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		{{> header}}
	</head>
	<body>
		<section>
	    <form method="post" action="addfood">
	      <div class="field half first">
	        <div class="form-group">
						<br>
						<h2>Add food</h2>
	          <label>Food name</label>
	          <input class="form-control" placeholder="Enter food name" name="foodName">
	        </div>
	        <div class="form-group">
	          <label >Calories</label>
	          <input class="form-control" placeholder="Enter Calories" name="calories">
	        </div>
	        <div class="form-group">
	          <label >Protein</label>
	          <input class="form-control" placeholder="Enter Protein" name="protein">
	        </div>
	        <div class="form-group">
	          <label >Carbs</label>
	          <input class="form-control" placeholder="Enter Carbs" name="carbs">
	        </div>
	        <div class="form-group">
	          <label >Fat</label>
	          <input class="form-control" placeholder="Enter Fat" name="fat">
	        </div>
	        <hr>
	          <input type="submit" value="Add food to db" class="btn btn-secondary btn-lg" />
	      </div>
	    </form>
	  </section>
	</body>
</html>
